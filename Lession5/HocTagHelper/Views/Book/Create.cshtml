@model HocTagHelper.Models.Book
@{
    ViewData["Title"] = "Create";
}
<div class="container col-md-5">
    <h3>Thêm mới sách</h3>
    <form asp-action="Save" asp-controller="Book" method="post">
        <div class="form-group">
            <label asp-for="BookId">Mã sách</label>
            <input asp-for="BookId" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Title">Tiêu đề sách</label>
            <input asp-for="Title" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Author">Mã sách</label>
            <input asp-for="Author" class="form-control" />
        </div>
        <div>
            <br />
            <input type="submit" value="Thêm mới" class="btn btn-success" />
        </div>
    </form>
</div>
